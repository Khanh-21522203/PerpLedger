# Per doc ยง19 ยง20: Environment variables for local development
# Usage: source .env.dev && go run ./cmd/perpledger

# Postgres
PERP_POSTGRES_DSN=postgres://perp:perp_dev_password@localhost:5432/perpledger?sslmode=disable

# NATS
PERP_NATS_URL=nats://localhost:4222

# Server ports
PERP_GRPC_ADDR=:9090
PERP_HTTP_ADDR=:8080
PERP_METRICS_ADDR=:9091

# Core tuning
PERP_PERSIST_CHAN_SIZE=8192
PERP_PROJECTION_CHAN_SIZE=4096
PERP_PERSIST_BATCH_SIZE=256
PERP_SNAPSHOT_INTERVAL=100000
PERP_IDEMPOTENCY_LRU_CAPACITY=1000000

# Migrations
PERP_MIGRATIONS_DIR=migrations

# Logging
PERP_LOG_LEVEL=debug

# GC tuning (per doc ยง12)
GOGC=400
